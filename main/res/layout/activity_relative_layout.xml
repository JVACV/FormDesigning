<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <EditText
        android:id="@+id/btn1"
        android:layout_width="fill_parent"
        android:layout_height="70px"
        android:background="#325CAD" />

    <Button

        android:id="@+id/btn2"
        android:layout_width="fill_parent"
        android:layout_height="300px"
        android:layout_below="@+id/btn1"
        android:background="#277AB9"
        android:text="All Contacts"
        android:textColor="#fff"
        android:textSize="80px" />





            <EditText
                android:id="@+id/et1"
                android:layout_width="match_parent"
                android:layout_height="170px"
                android:layout_below="@+id/btn2"
                android:drawableLeft="@drawable/downloadsearch"

                android:text="Search all contacts" />


    <ImageView
        android:layout_width="80px"
        android:layout_height="80px"
        android:src="@mipmap/wifi"
       android:layout_toLeftOf="@+id/battery"/>


    <ImageView
        android:id="@+id/battery"
        android:layout_width="80px"
        android:layout_height="80px"
        android:src="@mipmap/cc"
        android:layout_alignParentRight="true"
        android:layout_marginRight="160px"/>
    <EditText
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/et1"
         android:layout_marginTop="150px"
        android:text="Anvar"
        android:textSize="64px"

        android:drawableLeft="@drawable/profile"
        />

    <EditText
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Anu"
        android:textSize="64px"
        android:layout_below="@+id/text2"

        android:drawableLeft="@drawable/profile"/>

    <EditText
        android:id="@+id/text4"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:text="Anila"
        android:textSize="64px"
        android:layout_below="@+id/text3"

        android:drawableLeft="@drawable/profile"/>

    <EditText
        android:id="@+id/text5"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:text="Ammu"
        android:textSize="64px"
        android:layout_below="@+id/text4"
        android:drawableLeft="@drawable/profile"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/text5"
        android:text="Appu"
        android:textSize="64px"
        android:drawableLeft="@drawable/profile"
        />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>